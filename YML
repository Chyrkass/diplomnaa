# Настройки исследования и экспериментов
research:
  topic: "Анализ эмоциональной окраски русскоязычных текстов"
  problem: "Низкая точность существующих методов для русскоязычного контента"
  hypothesis: "Использование ensemble-моделей повысит точность анализа на 15%"
  
  objectives:
    - "Провести обзор существующих методов анализа тональности"
    - "Собрать и разместить датасет русскоязычных текстов"
    - "Разработать архитектуру системы"
    - "Реализовать и обучить модели машинного обучения"
    - "Провести сравнительный анализ эффективности"

  methodology:
    - "Системный анализ"
    - "Машинное обучение"
    - "Статистический анализ"
    - "Экспериментальная проверка"

  datasets:
    main:
      name: "Russian Sentiment Corpus"
      size: 50000
      source: "Twitter, VK, Telegram"
      classes: ["positive", "negative", "neutral"]
      split:
        train: 70
        validation: 15
        test: 15

    external:
      - name: "RuSentiment"
        size: 35000
      - name: "SentiRu"
        size: 28000

  models:
    - name: "BERT-base"
      parameters: 110000000
      training_time: "12 hours"
      
    - name: "CNN + LSTM"
      parameters: 2500000
      training_time: "4 hours"
      
    - name: "Random Forest"
      parameters: 1000
      training_time: "30 minutes"

  metrics:
    primary: "F1-score"
    secondary:
      - "accuracy"
      - "precision"
      - "recall"
      - "auc-roc"

